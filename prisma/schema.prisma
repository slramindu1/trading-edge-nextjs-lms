generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum StudentType {
  FREE
  PAID
}
enum LessonType {
  VIDEO
  PDF
}
enum CourseStatus {
  Draft
  Published
  Archived
}

model User {
  id                 String        @id @default(uuid())
  email              String        @unique
  fname              String?
  lname              String?
  password           String
  mobile             String?
  joined_date        DateTime      @default(now())
  verification_code  String?       // reset token
  reset_token_expiry DateTime?     // token expiry
  gender_id          Int
  user_type_id       Int
  status_id          Int
  aboutMe            String?       @db.VarChar(500)
  student_type       StudentType   @default(FREE)

  enrollments        Enrollment[]
  LessonProgress     LessonProgress[]
}

model Section {
  id               String       @id @default(uuid())
  title            String
  description      String
  dateCreated      DateTime     @default(now())
  fileKey          String
  smallDescription String
  slug             String       @unique
  status           CourseStatus @default(Draft)

  chapters    Chapter[]
  enrollments Enrollment[]
}

model Chapter {
  id               String    @id @default(uuid())
  title            String
  position         Int
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  fileKey          String?
  description      String?
  smallDescription String?
  section          Section   @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  sectionId        String

  topics Topic[]
  lessons Lesson[] // keep for backwards compatibility: lessons may belong to chapter directly
}

model Topic {
  id        String   @id @default(uuid())
  title     String
  position  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId String

  lessons   Lesson[]
}

model Lesson {
  id             String     @id @default(uuid())
  title          String
  description    String?
  thumbnailUrl   String?
  videoUrl       String?
  pdfUrl         String?
  lessonType     LessonType? // New enum column to indicate type
  videoDuration  String?     // <-- Add this field
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  chapter        Chapter    @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  chapterId      String

  topic          Topic?     @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId        String?

  position       Int

  LessonProgress LessonProgress[]
  videoDuration String? 
}


model Enrollment {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  section   Section  @relation(fields: [sectionId], references: [id])
  sectionId String
  createdAt DateTime @default(now())
}

model LessonProgress{
  id String @id @default(uuid())
  completed Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id],onDelete:Cascade)
  userId String
  lessons Lesson @relation(fields: [LessonId],references: [id], onDelete:Cascade)
  LessonId String

  @@unique([userId,LessonId])
}
