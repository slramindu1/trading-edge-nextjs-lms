generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  email            String   @id
  fname            String? 
  lname            String? 
  password         String
  mobile           String? 
  joined_date      DateTime @default(now())
  verification_code String? 
  gender_id        Int
  user_type_id     Int
  status_id        Int
  About_Me         String? @db.VarChar(500)
}